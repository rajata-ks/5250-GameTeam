                <Setter Property="ProgressColor" Value="Blue" />
                <Setter Property="BackgroundColor" Value="Gray"/>
                <Setter Property="Progress" Value="{Binding HealthPercent, Mode=TwoWay}"/>
            </Style>

            <!-- FlexLayout -->
            <Style TargetType="FlexLayout"
                x:Key="ItemLayout">
                <Setter Property="Margin" Value="5" />
                <Setter Property="Wrap" Value="Wrap"/>
                <Setter Property="JustifyContent" Value="SpaceAround"/>
                <Setter Property="AlignContent" Value="SpaceAround"/>
            </Style>

            <Style TargetType="FlexLayout"
                x:Key="ScoreStyle">
                <Setter Property="Wrap" Value="Wrap"/>
                <Setter Property="JustifyContent" Value="Start"/>
                <Setter Property="AlignContent" Value="Start"/>
            </Style>

            <Style TargetType="FlexLayout"
                x:Key="MonsterItemLayout">
                <Setter Property="Margin" Value="0" />
                <Setter Property="Wrap" Value="Wrap"/>
                <Setter Property="JustifyContent" Value="Start"/>
                <Setter Property="AlignItems" Value="Center"/>
                <Setter Property="AlignContent" Value="Start"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="WidthRequest" Value="50"/>
            </Style>
            <!-- Switch -->
            <Style TargetType="Switch"
                x:Key="BattleSettingSwitch">
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>