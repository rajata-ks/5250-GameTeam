<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.HomePage"
             BackgroundImageSource="sampleImage.jpg">

    <ContentPage.Content>
        <StackLayout  Style="{StaticResource HomePageCenterVerticalStack}">

            <StackLayout Style="{StaticResource CenterHorizontalStack}">

                <Image Source="logo.png" Style="{StaticResource LogoImageLarge}" />

            </StackLayout>

            <Button
                    Text="Start Game"
                    Clicked="GameButton_Clicked"
                    Style="{StaticResource StickyBottomButtons}"
                   />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>