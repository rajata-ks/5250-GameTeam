<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.HomePage"
             BackgroundImageSource="sampleImage.jpg">

    <ContentPage.Content>
        <StackLayout  Style="{StaticResource HomePageCenterVerticalStack}">

            <StackLayout Style="{StaticResource CenterHorizontalStack}">

                <Image Source="logo.png" Style="{StaticResource LogoImageLarge}" />
            </StackLayout>
            
            <ImageButton Source="startbutton.png" Clicked="GameButton_Clicked" Aspect="AspectFill" WidthRequest="300"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>