<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.NewRoundPage">

    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">

            <StackLayout Style="{StaticResource VerticalStack}">

                <StackLayout VerticalOptions="Start" x:Name="TopPlayerDisplay">
                    <StackLayout Style="{StaticResource VerticalStack}"
                        x:Name="GamePlayersTopDisplay" 
                        IsVisible="true" 
                        Style="{StaticResource NewRoundStyle}">


                        <StackLayout x:Name="CharacterBox"  Style="{StaticResource BoxStyle}" />


                        <Label Text="New Round"   Style="{StaticResource CenterMessageLargeStyle}"/>

                        <Button Clicked="BeginButton_Clicked" Text="Fight"   Style="{StaticResource CreateBottomButton}"/>


                        <StackLayout x:Name="MonsterBox"  Style="{StaticResource BoxStyle}" />

                    </StackLayout>

                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>