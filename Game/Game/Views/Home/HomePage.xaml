<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.HomePage"
             BackgroundImageSource="openingscreen_darkschool_deadtrees.png">

    <ContentPage.Content>




        <StackLayout>
            <StackLayout Style="{StaticResource CenterLogoHorizontalStack}">

                <Image Source="logo.png" Style="{StaticResource LogoImageLarge}"  />
            </StackLayout>

            <StackLayout Style="{StaticResource CenterButtonHorizontalStack}">
                <Button 
                    Text="Start Game"
                    Clicked="GameButton_Clicked"
                    Style="{StaticResource HomeBottomButtons}"
                   />

            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>