<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.CharacterReadPage"
             Title="{Binding Title}">



    <NavigationPage.TitleView>
        <Label Text="Read Page" HorizontalOptions="Center" Style="{StaticResource HeaderStyle}"/>
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>


    <ScrollView >
        <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition  Width="*" />
                    </Grid.ColumnDefinitions>

            <StackLayout >
                <StackLayout>
                    <Image Source="{Binding Data.ImageURI}"  Style="{StaticResource ImageLargeStyle}" Grid.Row="0" Grid.Column="1"/>
                    <StackLayout Style="{StaticResource VerticalStack}" Padding="10,0,10,0" Grid.Row="0" Grid.Column="2" HorizontalOptions="Center">
                        <StackLayout Style="{StaticResource HorizontalStack}">
                            <Label 
                               Text="Name : " 
                               Style="{StaticResource LabelStyle}"/>
                            <Label 
                                Text="{Binding Data.Name}" 
                                Style="{StaticResource ValueStyle}"/>
                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}">
                            <Label 
                                Text="Level : " 
                                Style="{StaticResource LabelStyle}"/>
                            <Label 
                                Text="{Binding Data.Level}" 
                                Style="{StaticResource ValueStyle}"/>
                        </StackLayout>
                        <StackLayout Style="{StaticResource HorizontalStack}">
                            <Label 
                                Text="Max Health : " 
                                Style="{StaticResource LabelStyle}"/>
                            <Label 
                                Text="{Binding Data.MaxHealth}" 
                                Style="{StaticResource ValueStyle}"/>
                        </StackLayout>
                    </StackLayout>

                </StackLayout>
                <StackLayout Grid.Row="1" Grid.ColumnSpan="3" >
                                <Label LineBreakMode="WordWrap"
                                    Text="Description : " 
                                    Style="{StaticResource LabelStyle}"/>
                                <Label 
                                    Text="{Binding Data.Description}" 
                                    Style="{StaticResource ValueStyle}"/>
                            </StackLayout>
                       

                        <Label Text="Attributes" Style="{StaticResource HeaderStyle}"/>
                        <StackLayout Orientation="Vertical">

                            <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">
                                <Label Text="Attack: " Style="{StaticResource LabelStyle}"/>
                                <Label Text="{Binding Data.Attack}" Style="{StaticResource LabelStyle}"/>
                            </StackLayout>

                            <StackLayout Orientation="Horizontal" VerticalOptions="Start" Spacing="0" HorizontalOptions="Fill">
                                <StackLayout HorizontalOptions="FillAndExpand" Spacing="0">
                                    <ProgressBar x:Name="AttackProgress" Progress="{Binding Data.GetAttackProgress}" ProgressColor="Blue" HeightRequest="20"  Margin="0" />
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="0" FontSize="Micro" HorizontalOptions="Start" TextColor="Black" Margin="0,-2,0,0"></Label>
                                        <Label Text="9" FontSize="Micro" HorizontalOptions="EndAndExpand" TextColor="Black" Margin="0,-2,0,0"></Label>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>

                            <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">
                                <Label Text="Defense: " Style="{StaticResource LabelStyle}"/>
                                <Label Text="{Binding Data.Defense}" Style="{StaticResource LabelStyle}"/>
                            </StackLayout>

                            <StackLayout Orientation="Horizontal" VerticalOptions="Start" Spacing="0" HorizontalOptions="Fill">
                                <StackLayout HorizontalOptions="FillAndExpand" Spacing="0">
                                    <ProgressBar x:Name="DefenseProgress" Progress="{Binding Data.GetDefenseProgress}" ProgressColor="Blue" HeightRequest="20"  Margin="0" />
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="0" FontSize="Micro" HorizontalOptions="Start" TextColor="Black" Margin="0,-2,0,0"></Label>
                                        <Label Text="9" FontSize="Micro" HorizontalOptions="EndAndExpand" TextColor="Black" Margin="0,-2,0,0"></Label>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>

                            <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">
                                <Label Text="Speed: " Style="{StaticResource LabelStyle}"/>
                                <Label Text="{Binding Data.Speed}" Style="{StaticResource LabelStyle}"/>
                            </StackLayout>

                            <StackLayout Orientation="Horizontal" VerticalOptions="Start" Spacing="0" HorizontalOptions="Fill">
                                <StackLayout HorizontalOptions="FillAndExpand" Spacing="0">
                                    <ProgressBar x:Name="SpeedProgress" Progress="{Binding Data.GetSpeedProgress}" ProgressColor="Blue" HeightRequest="20"  Margin="0" />
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="0" FontSize="Micro" HorizontalOptions="Start" TextColor="Black" Margin="0,-2,0,0"></Label>
                                        <Label Text="9" FontSize="Micro" HorizontalOptions="EndAndExpand" TextColor="Black" Margin="0,-2,0,0"></Label>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>

                        </StackLayout>
                        <FlexLayout 
                        Margin="5"
                        Wrap="Wrap"
                        JustifyContent="SpaceAround"
                        AlignContent="SpaceAround"
                        x:Name="ItemBox">
                        </FlexLayout>
                        </StackLayout>

                    <Frame CornerRadius="10"  
                               Padding="50"
                               BackgroundColor="GhostWhite"
                               Grid.Row="2" Grid.ColumnSpan="3" BorderColor="Black">

                        <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="Center">

                            <Label Text="Do you want to update this Character?" Style="{StaticResource LabelStyle}" 
                           Grid.Row="1" Grid.ColumnSpan="3" HorizontalOptions="Center"
                            Padding="10"/>


                            <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="Center">
                                <Button 
                            Text="Yes"  Clicked="Update_Clicked"  HorizontalOptions="Center" 
                            FontSize="Medium" BorderWidth="1"  BorderColor="black" Margin="10,0,10,0">
                                </Button>
                            </StackLayout>
                        </StackLayout>
                    </Frame>

            <Image Source="elf1.png" Style="{StaticResource ImageLargeStyle}" Grid.Row="2" Grid.Column="0"/>


            <!--The Item Popup-->
        <StackLayout x:Name="PopupLoadingView" 
                 BackgroundColor="{StaticResource PageBackgroundColor}" 
                 IsVisible="false" 
                 AbsoluteLayout.LayoutBounds=".5, .5,.5,.5" 
                 AbsoluteLayout.LayoutFlags="All">

            <StackLayout 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                WidthRequest="300"
                HeightRequest="300"
                >

                <Frame 
                    BorderColor="{StaticResource TriciaryTextColor}" Padding="1">
                    <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="CenterAndExpand" Padding="2">
                        <Image x:Name="PopupItemImage" Style="{StaticResource ImageLargeStyle}"/>

                        <Label x:Name="PopupItemName" Style="{StaticResource PopupItemTextStyle} " MaxLines="2" LineBreakMode="WordWrap" />
                        <Label x:Name="PopupItemDescription" Style="{StaticResource PopupItemTextStyle}" MaxLines="2" LineBreakMode="WordWrap" />

                        <StackLayout Style="{StaticResource HorizontalStack}">
                            <Label Text="Location : " Style="{StaticResource LabelStyle}" />
                            <Label x:Name="PopupItemLocation" Style="{StaticResource ValueStyle}" />
                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}">
                            <Label x:Name="PopupItemAttribute" Style="{StaticResource LabelStyle}" />
                            <Label x:Name="PopupItemValue" Style="{StaticResource ValueStyle}" />
                        </StackLayout>

                        <Button x:Name="PopupCloseButton" 
                                Clicked="ClosePopup_Clicked" 
                                Text="Close"/>
                    </StackLayout>
                </Frame>

                   
                </StackLayout>
        </StackLayout>
            </Grid>
        </ScrollView>
    
</ContentPage>